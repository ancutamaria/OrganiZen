<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:padding="3dp"
    >

    <TextView
        android:id="@+id/quoteOfTheDay"
        style="@style/MainScreenCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The little things? The little moments? They arenâ€™t little. - Jon Kabat-Zinn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/textView1"
        style="@style/MainScreenCard"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.48"
        android:layout_height="wrap_content"
        android:text="Shopping list"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quoteOfTheDay" />

    <TextView
        android:id="@+id/textView2"
        style="@style/MainScreenCard"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.48"
        android:layout_height="wrap_content"
        android:text="Bucket list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView1"
        app:layout_constraintTop_toBottomOf="@+id/quoteOfTheDay" />

    <TextView
        android:id="@+id/textView3"
        style="@style/MainScreenCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weekly/ Monthly planner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        style="@style/MainScreenCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mood board"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        style="@style/MainScreenCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Habits tracking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>